<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="dtscrum.actionSet">
         <menu
               label="TD Wizard"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               label="Run TD Wizard"
               icon="icons/sample.gif"
               class="dtscrum.actions.SampleAction"
               tooltip="TD Wizard"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="dtscrum.actions.SampleAction">
         </action>
      </actionSet>
   </extension>

</plugin>
